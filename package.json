{
  "name": "@grid-vue/grid",
  "version": "0.1.0",
  "description": "A flexible, configurable grid component library for Vue 3 applications with support for both cursor and page-based pagination, custom data providers, and extensive customization options.",
  "author": "Dima Popov",
  "license": "MIT",
  "type": "module",
  "main": "./dist/grid.umd.cjs",
  "module": "./dist/grid.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/grid.js",
      "require": "./dist/grid.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "vue",
    "vue3",
    "datatable",
    "grid",
    "table",
    "pagination",
    "data-provider",
    "typescript",
    "cursor-pagination",
    "page-pagination"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/einhasad/vue-datatable.git"
  },
  "bugs": {
    "url": "https://github.com/einhasad/vue-datatable/issues"
  },
  "homepage": "https://github.com/einhasad/vue-datatable#readme",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run postbuild",
    "postbuild": "rm -rf dist/node_modules dist/vite.config.d.ts dist/vite.config.d.ts.map dist/__VLS_types.d.ts",
    "preview": "vite preview",
    "prepare": "npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:smoke": "playwright test smoke-test.spec.ts",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "extract:examples": "tsx scripts/extract-examples.ts",
    "examples:dev": "npm run extract:examples && cd examples && npm run dev",
    "examples:build": "npm run extract:examples && cd examples && npm run build",
    "lint": "eslint . --ext .vue,.ts,.tsx",
    "lint:fix": "eslint . --ext .vue,.ts,.tsx --fix",
    "mock-api": "node examples/mock-server/server.js",
    "mock-api:dev": "node --watch examples/mock-server/server.js",
    "verify:servers": "node scripts/verify-servers.js"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue-router": {
      "optional": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "cors": "^2.8.5",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.5.1",
    "express": "^4.18.2",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.2.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.46.4",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^3.2.4",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
